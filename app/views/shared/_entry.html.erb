<div class="py-1 flex flex-nowrap space-x-4 px-2">
  <div class=" flex-shrink-0 flex flex-col align-bottom">
    <img class="object-cover w-16 h-16 rounded my-auto" src="<%= img_src_for_entry(entry) %>" />
  </div>
  <div class="flex-grow space-y-1 my-2">
    <p class="text-gray-500 dark:text-gray-300 text-xs"><%= link_to entry.feed.title, feed_url(entry.feed) %></p>
    <a href="<%= entry.real_uri %>" target="_blank">
      <h2 class="font-semibold text-gray-900 dark:text-white title-font"><%= entry.title %></h2>
    </a>
    <p class="leading-relaxed text-xs"><%= entry.description.truncate_words(100) %></p>
    <p class="text-gray-500 dark:text-gray-300 text-xs" data-relative-timestamp="<%= timestamp_with_millis(entry.published_date) %>"><%= time_ago_in_words entry.published_date %> ago</p>
  </div>
</div>
